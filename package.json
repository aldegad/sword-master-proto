{
  "name": "sword-master-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Sword Master 게임 프로젝트",
  "scripts": {
    "dev:game": "pnpm --filter sword-master dev",
    "build:game": "pnpm --filter sword-master build",
    "deploy:game": "pnpm --filter sword-master build && pnpm --filter sword-master run deploy",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "typescript": "^5.3.3"
  }
}
